<div class=" grid grid-cols-1 justify-between w-full items-center">
    <div class="text-center">
        <h1 class="text-navy text-5xl md:text-6xl xl:text-8xl" >{{ entry.headline }}</h1>
        <div class="aspect-square w-2/3 lg:w-1/3 bg-mint mx-auto">

        </div>

        <div class="max-w-[720px] mx-auto">
            <p class="text-navy text-4xl xl:text-6xl leading-tight font-display">{{ entry.simpleText }}</p>
        </div>
    </div>

    {% if entry.buttons is defined and entry.buttons|length %}
        <div class="flex flex-wrap justify-center gap-4 py-8">

            {% for entry in entry.buttons  %}
                {% include '_partials/entry/button.twig' with {
                    variant: 'navy'
                }%}
            {% endfor %}
        </div>


    {% endif %}


</div>

