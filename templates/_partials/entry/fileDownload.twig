{% set asset = entry.downloadFile.eagerly().one() %}
{% if asset %}
    <a href="{{ asset.url }}"
       download
       class="inline-flex items-center gap-3 px-5 py-3 bg-white/10 hover:bg-pink text-white rounded-lg transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <span class="inline-flex items-center">
            <span class="font-bold">{{ entry.title ?? asset.title ?? asset.filename }}</span>
            <span class="text-white/60 text-sm ml-2">({{ asset.filename|split('.')|last|upper }}, {{ (asset.size / 1024)|round }}KB)</span>
        </span>
    </a>
{% endif %}
