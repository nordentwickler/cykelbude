<details class="group/detail bg-white block">
    <summary class="group/summary list-none focusable font-medium flex items-center justify-between text-pink active:text-navy hover:text-navy cursor-pointer">
        <span class="py-5 md:py-10 px-6 md:px-12 text-2xl md:text-4xl ">
            {{ entry.title }}
        </span>

        <span class=" group-hover/summary:text-navy group-active/summary:ring-foreground p-2 md:p-6">
             {{ craft.vite.inline('@assets/icons/caret-down.svg')|attr({
                 class: 'size-10 transition translate duration-200 group-open/detail:rotate-180 fill-current'
             }) }}
        </span>
    </summary>

    <div class="py-5 md:py-10 px-6 md:px-12 text-pink">
        {% include '_partials/entry/richText.twig' %}
    </div>
</details>
